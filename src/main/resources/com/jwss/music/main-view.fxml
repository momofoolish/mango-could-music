<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.jwss.music.MainController">
    <left>
        <VBox minWidth="210">
            <Button minWidth="205" onMouseClicked="#onImportMusicClick" text="导入音乐" />
            <Button minWidth="205" onMouseClicked="#onImportMusicClickByFolder" text="导入本地乐库" />
            <Button minWidth="205" onMouseClicked="#onImportMusicClickByShare" text="导入分享乐库" />
        </VBox>
    </left>

    <center>
        <TableView fx:id="musicTableView">
            <columns>
                <TableColumn fx:id="nameTableColumn" text="标题" minWidth="250"/>
                <TableColumn fx:id="authorTableColumn" text="歌手" minWidth="120"/>
                <TableColumn fx:id="albumTableColumn" text="专辑" minWidth="200"/>
                <TableColumn fx:id="durationTableColumn" text="时长" minWidth="100"/>
                <TableColumn fx:id="sizeTableColumn" text="大小" minWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox>
            <HBox alignment="center" spacing="10">
                <Button onMouseClicked="#onPreview" text="⏮"/>
                <Button onMouseClicked="#onPlayOrPause" fx:id="playOrPauseMusicBtn" text="▶"/>
                <Button onMouseClicked="#onNext" text="⏭"/>
            </HBox>
            <HBox alignment="center">
                <Label text="00:12" fx:id="currentPlayLabel"/>
                <ProgressBar minWidth="300" fx:id="musicPlayProgress" progress="0.00"/>
                <Label text="04:12" fx:id="endPlayLabel"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>